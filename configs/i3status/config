general {
        colors = false
        interval = 5
}

order += "volume master"
#order += "disk /"
order += "wireless _first_"
#order += "memory"
#order += "load"
order += "tztime local"



volume master {
    format = "Û∞ïæ %volume"
    format_muted = "Û∞ùü muted"
    device = "default"
}


wireless _first_ {
        format_up = " Û∞ñ© "
        format_down = " Û±öµ "
}

ethernet eth0 {
        format_up = "E: %ip (%speed)"
        format_down = "E: down"
}

battery 0 {
        format = "%status %percentage %remaining %emptytime"
        format_down = "No battery"
        status_chr = "‚ö° CHR"
        status_bat = "üîã BAT"
        status_unk = "? UNK"
        status_full = "‚òª FULL"
        path = "/sys/class/power_supply/BAT%d/uevent"
        low_threshold = 10
}

run_watch DHCP {
        pidfile = "/var/run/dhclient*.pid"
}

run_watch VPNC {
        # file containing the PID of a vpnc process
        pidfile = "/var/run/vpnc/pid"
}

path_exists VPN {
        # path exists when a VPN tunnel launched by nmcli/nm-applet is active
        path = "/proc/sys/net/ipv4/conf/tun0"
}

tztime local {
        format = "%m/%d/%Y %I:%M %P "
}

load {
        format = "%5min"
}

cpu_temperature 0 {
        format = "T: %degrees ¬∞C"
        path = "/sys/devices/platform/coretemp.0/temp1_input"
}

memory {
        format = "%used"
        threshold_degraded = "10%"
        format_degraded = "MEMORY: %free"
}

disk "/" {
        format = "%free"
}

read_file uptime {
        path = "/proc/uptime"
}
